@model CreateCustomerDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <h5>Yeni Müşteri</h5>
        <br />
        <label>İsim: </label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Soyisim: </label>
        <input type="text" asp-for="Surname" class="form-control" />
        <br />
        <label>Bakiye: </label>
        <input type="number" step="0.01" asp-for="Balance" class="form-control" />
        <br />
        <button class="btn btn-primary">Oluştur</button>
    </div>
</form>